# Environment Variables
# Copy this file to .env and update with your own values

# Application
SECRET_KEY=your-super-secret-key-change-this-in-production-make-it-long-and-random
JWT_SECRET_KEY=your-jwt-secret-key-also-change-this-in-production

# Flask
FLASK_ENV=development
FLASK_DEBUG=1

# MongoDB
MONGO_ROOT_PASSWORD=changeme123
MONGO_URI=mongodb://admin:changeme123@localhost:27017/hide_anything_qr?authSource=admin

# Redis
REDIS_PASSWORD=redispass123
REDIS_URL=redis://:redispass123@localhost:6379/0

# Server
PORT=5000
HOST=0.0.0.0

# CORS (comma-separated origins)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5000,http://127.0.0.1:5000

# File Upload
MAX_CONTENT_LENGTH=52428800
UPLOAD_FOLDER=backend/static/uploads

# Email (Optional - for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@hideanything.com

# Security
SESSION_COOKIE_SECURE=False
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Lax
